{% trans_default_domain 'FOSUserBundle' %}
 <div class="main-container col2-left-layout">
                    <div class="main">
                        <div class="col-main">
                            <div class="my-account">
                                <div class="dashboard">
                                    <div class="page-title">
                                        <h1>My Dashboard</h1>
                                    </div>
                                    <div class="welcome-msg">
                                        <p class="hello"><strong>Hello, John Doe!</strong></p>
                                        <p>From your My Account Dashboard you have the ability to view a
                                            snapshot of your recent account activity and update your account
                                            information. Select a link below to view or edit information.</p>
                                    </div>
                                    <div class="box-account box-recent">
                                        <div class="box-head">
                                            <h2>Recent Orders</h2>
                                            <a href="{{path('shop_shop_orders')}}">View All</a>
                                        </div>
                                        {#   
                                        {% if orders%}    
                                        <table class="data-table" id="my-orders-table">
                                            <col width="1" />
                                            <col width="1" />
                                            <col />
                                            <col width="1" />
                                            <col width="1" />
                                            <col width="1" />
                                            <thead>
                                                <tr class="first last">
                                                    <th>Order #</th>
                                                    <th>Date</th>
                                                    <th>Ship To</th>
                                                    <th><span class="nobr">Order Total</span></th>
                                                    <th>Status</th>
                                                    <th>&nbsp;</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr class="first last odd">
                                                    <td>100027773</td>
                                                    <td><span class="nobr">7/24/12</span></td>
                                                    <td>John Doe</td>
                                                    <td><span class="price">$2,699.99</span></td>
                                                    <td><em>Pending</em></td>
                                                    <td class="a-center last">
                                                        <span class="nobr">
                                                            <a href="#">View Order</a>
                                                        </span>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        {% endif %}
                                        #}
                                        There are no placed orders.
                                    </div>
                                    <div class="box-account box-info">
                                        <div class="box-head">
                                            <h2>Account Information</h2>
                                        </div>
                                        <div class="col2-set">
                                            <div class="col-1">
                                                <div class="box">
                                                    <div class="box-title">
                                                        <h3>Contact Information</h3>
                                                        <a href="{{path('fos_user_profile_edit')}}">Edit</a>
                                                    </div>
                                                    <div class="box-content">
                                                        <p>
                                                            {{user.firstName }} {{user.lastName}}<br />
                                                            {{user.email}}<br />
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col2-set">
                                            <div class="box">
                                                <div class="box-title">
                                                    <h3>Address Book</h3>
                                                </div>
                                                <div class="box-content">
                                                    <div class="col-1">
                                                        {% if user.billingAddress%}
                                                        <h4>Billing Address</h4>
                                                        <address>
                                                            Name: <i><b>{{user.billingAddress.firstname}} {{user.billingAddress.lastname}}</b></i><br />
                                                            City: <i><b>{{user.billingAddress.city}},{{user.billingAddress.address}}</b></i><br />
                                                            Country: <i><b>{{user.billingAddress.country}}</b></i><br />
                                                            Email: <i><b>{{user.billingAddress.email}}</b></i><br />
                                                            T: <i><b>{{user.mobile}}</b></i>  
                                                        </address>
                                                        {%else%}
                                                        There is no adress set.
                                                        {%endif%}
                                                        <br />
                                                            <a href="{{path('shop_shop_billing')}}">Edit Address</a>
                                                    </div>
                                                    <div class="col-1">
                                                        {% if user.shippingAddress%}
                                                        <h4>Shipping Address</h4>
                                                        <address>
                                                            Name: <i><b>{{user.shippingAddress.firstname}} {{user.shippingAddress.lastname}}</b></i><br />
                                                            City: <i><b>{{user.shippingAddress.city}},{{user.shippingAddress.address}}</b></i><br />
                                                            Country: <i><b>{{user.shippingAddress.country}}</b></i><br />
                                                            Email: <i><b>{{user.shippingAddress.email}}</b></i><br />
                                                            T: <i><b>{{user.mobile}}</b></i>  
                                                        </address>
                                                        {%else%}
                                                        There is no adress set.
                                                        {%endif%}
                                                        <br />
                                                            <a href="{{path('shop_shop_shipping')}}">Edit Address</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-left sidebar">
            <div class="block block-account">
                <div class="block-title">
                    <strong><span>My Account</span></strong>
                </div>
                <div class="block-content">
                    {% set menuItem = knp_menu_get('ShopShopBundle:Builder:accountMenu') %}
                        {{ knp_menu_render(menuItem) }}
                </div>
            </div>
            <div class="block block-cart">
                                <div class="block-title">
                                    <strong><span>My Cart</span></strong>
                                </div>
                                <div class="block-content">
                                    <p class="empty">You have no items in your shopping cart.</p>
                                </div>
                            </div>
        </div>
                    </div>
                </div>