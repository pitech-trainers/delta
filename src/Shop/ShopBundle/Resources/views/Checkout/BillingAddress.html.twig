{% extends 'ShopShopBundle::bundle-layout.html.twig' %}
{%block container%}

<div class="main-container col2-right-layout">
    <div class="main">
        <div class="col-main">
            <div class="page-title">
                <h1>Checkout</h1>
            </div>
            <ol class="opc" id="checkoutSteps">
                <li id="opc-billing" class="section slide2 allow active">
                    <div class="step-title">
                        <span class="number">1 / 5</span>
                        <h2>Billing Information</h2>
                        <a href="#">Edit</a>
                    </div>
                    <div id="checkout-step-billing" class="step a-item">
                        <form action="{{ path('shop_shop_checkout1') }}" {{ form_enctype(form) }} method="POST" class="address_form_type">
                        {{ form_errors(form) }}
                        <ul class="form-list">
                            <li class="fields">
                                <div class="customer-name">
                                    <div class="field name-firstname">
                                            {{ form_label(form.firstname) }}
                                            <div class="input-box">
                                                {{ form_widget(form.firstname, { 'attr': {'class': 'input-text required-entry'} }) }}
                                                </div>
                                            </div>
                                            <div class="field name-lastname">
                                            {{ form_label(form.lastname) }}
                                                    <div class="input-box">
                                                {{ form_widget(form.lastname, { 'attr': {'class': 'input-text required-entry'} }) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                            <li>
                                                <div class="field">
                                                    {{ form_label(form.email) }}
                                                    <div class="input-box">
                                                        {{ form_widget(form.email, { 'attr': {'class': 'input-text validate-email required-entry'} }) }}
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="wide">
                                                <div class="field">
                                                    {{ form_label(form.address) }}
                                                    <div class="input-box">
                                                        {{ form_widget(form.address, { 'attr': {'class': 'input-text  required-entry'} }) }}
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="fields">
                                <div class="customer-name">
                                    <div class="field name-firstname">
                                            {{ form_label(form.city) }}
                                            <div class="input-box">
                                                {{ form_widget(form.city, { 'attr': {'class': 'input-text required-entry'} }) }}
                                                </div>
                                            </div>
                                            <div class="field name-lastname">
                                            {{ form_label(form.country) }}
                                                    <div class="input-box">
                                                {{ form_widget(form.country, { 'attr': {'class': 'input-text required-entry'} }) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                            <li class="control">
                                        <input name="use_for_shipping" id="billing:use_for_shipping_yes" value="1" checked="checked" title="Ship to this address" class="radio" type="radio" />
                                        <label for="billing:use_for_shipping_yes">Ship to this address</label>
                                    </li>
                                    <li class="control">
                                        <input name="use_for_shipping" id="billing:use_for_shipping_no" value="0" title="Ship to different address" class="radio" type="radio">
                                        <label for="billing:use_for_shipping_no">Ship to different address</label>
                                    </li>
                                        </ul>
                                    {{form_rest(form)}}
                                    <div class="buttons-set">
                                        <p class="required">* Required Fields</p>
                                        <button type="submit" title="Submit" class="button"><span><span>Submit</span></span></button>
                                    </div>
                                </form>
                    </div>
                </li>
            </ol>
        </div>

    </div>
</div>



{%endblock%}