{%extends '::adminbase.html.twig'%}
{%block container%}
<!--  start page-heading -->
<div id="page-heading">
    <h1>User list</h1>
</div>
<!-- end page-heading -->

<table border="0" width="100%" cellpadding="0" cellspacing="0" id="content-table">
    <tr>
        <th rowspan="3" class="sized"><img src="{{asset ('bundles/shopshop/images/shared/side_shadowleft.jpg')}}" width="20" height="300" alt="" /></th>
        <th class="topleft"></th>
        <td id="tbl-border-top">&nbsp;</td>
        <th class="topright"></th>
        <th rowspan="3" class="sized"><img src="{{asset ('bundles/shopshop/images/shared/side_shadowleft.jpg')}}" width="20" height="300" alt="" /></th>
    </tr>
    <tr>
        <td id="tbl-border-left"></td>
        <td>
            <!--  start content-table-inner ...................................................................... START -->
            <div id="content-table-inner">

                <!--  start table-content  -->
                <div id="table-content">


                    <!--  start product-table ..................................................................................... -->
                    <form id="mainform" action="" method="post">
                        <table border="0" width="100%" cellpadding="0" cellspacing="0" id="product-table">
                            <tr>
                                <th class="table-header-repeat line-left minwidth-1">{{ knp_pagination_sortable(users, 'Username', 'u.username') }}</th>
                                <th class="table-header-repeat line-left minwidth-1">{{ knp_pagination_sortable(users, 'Last Name', 'u.lastName') }}</th>
                                <th class="table-header-repeat line-left minwidth-1">{{ knp_pagination_sortable(users, 'First Name', 'u.firstname') }}</th>
                                <th class="table-header-repeat line-left minwidth-1">{{ knp_pagination_sortable(users, 'Email', 'u.email') }}</th>
                                <th class="table-header-repeat line-left">{{ knp_pagination_sortable(users, 'Status', 'u.status') }}</th>
                                <th class="table-header-options line-left"><a href="">Options</a></th>
                            </tr>
                          {%set nr =0%}
                           {%for user in users%}
                            {%set nr = nr + 1%}
                            
                                {%if loop.index %2 == 0%}
                                        <tr>
                                            <td>{{user.username}}</td>
                                            <td>{{user.lastname}}</td>
                                            <td>{{user.firstname}}<a href=""></a></td>
                                            <td>{{user.email}}</td>
                                            <td>{{user.enabled}}<a href=""></a></td>
                                            {%if user.id !=1%}
                                            <td class="options-width">
                                                <a href="" title="Edit" class="icon-1 info-tooltip"></a>
                                                <a href="{{path('shop_shop_removeuser', {'id' : user.id })}}" title="Delete" class="icon-2 info-tooltip"></a>
                                                
                                                    <a href="" 
                                                       title="Activate" class="icon-5 info-tooltip"></a>
                                                   
                                            </td>
                                            {%else%}
                                            <td>
                                            Super admin
                                            </td>
                                            {%endif%}
                                        </tr>
                                       {%else%}
                                        <tr class="alternate-row">
                                           <td>{{user.username}}</td>
                                            <td>{{user.lastname}}</td>
                                            <td>{{user.firstname}}<a href=""></a></td>
                                            <td>{{user.email}}</td>
                                            <td>{{user.enabled}}<a href=""></a></td>
                                            {%if user.id !=1%}
                                            <td class="options-width">
                                                <a href="" title="Edit" class="icon-1 info-tooltip"></a>
                                                <a href="{{path('shop_shop_removeuser', {'id' : user.id })}}" title="Delete" class="icon-2 info-tooltip"></a>
                                                
                                                    <a href="" 
                                                       title="Activate" class="icon-5 info-tooltip"></a>
                                                   
                                            </td>
                                            {%else%}
                                            <td>
                                            Super admin
                                            </td>
                                            {%endif%}
                                        </tr>
                                        {%endif%}
                                        {%endfor%}
                                        {{nr}} User(s)
                        </table>
                           
                        <!--  end product-table................................... --> 
                    </form>
                </div>
                <!--  end content-table  -->

                <!--  start paging..................................................... -->
                
                    <table border="0" cellpadding="0" cellspacing="0" id="paging-table">
                        <tr>
                            <td>
                                 {{ knp_pagination_render(users) }}
                            </td>
                        </tr>
                    </table>
                
                <!--  end paging................ -->

                <div class="clear"></div>

            </div>
            <!--  end content-table-inner ............................................END  -->
        </td>
        <td id="tbl-border-right"></td>
    </tr>
    <tr>
        <th class="sized bottomleft"></th>
        <td id="tbl-border-bottom">&nbsp;</td>
        <th class="sized bottomright"></th>
    </tr>
</table>
{%endblock%}