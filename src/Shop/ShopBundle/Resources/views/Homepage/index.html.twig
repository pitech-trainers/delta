{% extends 'ShopShopBundle::bundle-layout.html.twig' %}
{% block container %}
<div class="main-container col3-layout">
    <div class="main">
        <div class="col-wrapper">
            <div class="col-main">
                {% for flashMessage in app.session.flashbag.get('notice-failure') %}
                <div id="messages_product_view">
                    <ul class="messages">
                        <li class="error-msg">
                            <ul>
                                <li><span>{{flashMessage}}</span></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                {% endfor %}

                {% for flashMessage in app.session.flashbag.get('notice-success') %}
                <div id="messages_product_view">
                    <ul class="messages">
                        <li class="success-msg">
                            <ul>
                                <li><span>{{flashMessage}}</span></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                {% endfor %}
                <div class="box best-selling">
                    <h3>Latest Products</h3>

                    <table cellspacing="0" border="0">
                        <tbody>
                            {% for product in products  %}
                                
                                {% if loop.index0%4 != 2 and loop.index0 % 4 !=3 %}
                                {% if loop.index0%2 !=1 %} 
                                <tr class="odd">
                                    <td>
                                        <a href="{{path ('shop_shop_productpage', {'id' : product.categoryId.Id,'productid': product.id})}}">
                                           
                                            <img width="95" height="135" alt="" src="{{asset ('bundles/shopshop/image/' ~ product.filename)}}" class="product-img">
                                        </a>
                                        <div class="product-description">
                                            <p><a href="{{path ('shop_shop_productpage', {'id' : product.categoryId.Id,'productid': product.id})}}">{{ product.title }}</a></p>

                                            <p>See all <a href="{{path('shop_shop_categorypage', {'id' : product.categoryId.Id})}}">{{product.categoryId.categoryName}}</a></p>

                                        </div>
                                    </td>
                                    {% else%}
                                    <td>
                                        <a href="{{path ('shop_shop_productpage', {'id' : product.categoryId.Id,'productid': product.id})}}">
                                            <img width="95" height="135" alt="" src="{{asset ('bundles/shopshop/image/' ~ product.filename)}}" class="product-img">
                                        </a>
                                        <div class="product-description">
                                            <p><a href="{{path ('shop_shop_productpage', {'id' : product.categoryId.Id,'productid': product.id})}}">{{ product.title }}</a></p>
                                            <p>See all <a href="{{path('shop_shop_categorypage', {'id' : product.categoryId.Id})}}">{{product.categoryId.categoryName}}</a></p>
                                        </div>
                                    </td>
                                </tr>
                                    {% endif%}
                                    {% else %}
                                     {% if loop.index0 %2 !=1 %}
                                <tr class="even">          
                                    <td>
                                        <a href="{{path ('shop_shop_productpage', {'id' : product.categoryId.Id,'productid': product.id})}}">
                                            <img width="95" height="135" alt="" src="{{asset ('bundles/shopshop/image/' ~ product.filename)}}" class="product-img">
                                        </a>
                                        <div class="product-description">
                                            <p><a href="{{path ('shop_shop_productpage', {'id' : product.categoryId.Id,'productid': product.id})}}">{{ product.title }}</a></p>
                                            <p>See all <a href="{{path('shop_shop_categorypage', {'id' : product.categoryId.Id})}}">{{product.categoryId.categoryName}}</a></p>
                                        </div>
                                    </td>
                                    {%else%}
                                    <td>
                                        <a href="{{path ('shop_shop_productpage', {'id' : product.categoryId.Id,'productid': product.id})}}">
                                            <img width="95" height="135" alt="" src="{{asset ('bundles/shopshop/image/' ~ product.filename)}}" class="product-img">
                                        </a>
                                        <div class="product-description">
                                            <p><a href="{{path ('shop_shop_productpage', {'id' : product.categoryId.Id,'productid': product.id})}}">{{ product.title }}</a></p>
                                            <p>See all <a href="{{path('shop_shop_categorypage', {'id' : product.categoryId.Id})}}">{{product.categoryId.categoryName}}</a></p>
                                        </div>
                                    </td>
                                    {% endif%}
                                    {%endif%}
                                {% endfor%}

                                </tr>
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>
                        
        </div>
    </div>

{%endblock%}

